{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6","es2015"],
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "build"
  },
  "include": [
    "**/*.ts"
    , "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "gulp",
    "config"
  ]
}
