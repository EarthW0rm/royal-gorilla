{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5"],
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "build"
  },
  "include": [
    "src-server/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "front-src",
    "gulp"
  ]
}
